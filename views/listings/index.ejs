<%layout("../layouts/boilerplate")-%>
<body>
    <h1>Wellcome to wonderlust</h1>
    <div id="container">
        <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(listing of allListing){%>
            <div class="card listing-card col" >
                <a href="/listing/<%=listing._id%>/details" class="listing-link">
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing-img" style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                          <b><%=listing.title%></b> <br>
                          &#8377; <%=listing.price.toLocaleString("en-IN")%> / night
                      </p>
                    </div>
                </a>
            </div>
            <%}%>
        </div>
    </div>  
</body>
